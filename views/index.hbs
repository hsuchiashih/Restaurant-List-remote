<header>
  <!-- navigation -->
  <nav
    class="navbar navbar-light"
    style="background-color: #e3f2fd;"
  >
    <div class="container">
      <a
        class="navbar-brand"
        href="/"
      >
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        >
        我的餐廳清單
      </a>
      <div class="col-6">
        <div
          class="d-flex"
          style="justify-content: flex-end;"
        >
          <a href="./restaurants/new">
            <button
              type="button"
              class="btn btn-outline-info"
            ><i class="fas fa-plus"></i> 新增餐廳清單</button>
          </a>
        </div>
      </div>
    </div>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div
    class="row"
    style="
    justify-content: space-between;
    padding: 20px 100px;"
  >
    <div class="col-3">
      <form action="/search">
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            value="{{keyword}}"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value=""
            aria-describedby="search-button"
          >
          <div class="input-group-append">
            <button
              class="btn btn-major"
              type="submit"
              id="search-button"
            ><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div
      class="d-flex col-3"
      style="justify-content: flex-end"
    >
      <div class="dropdown mb-3 mr-3">
        <button
          class="btn btn-major dropdown-toggle"
          type="button"
          id="dropdownMenuButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Sort
        </button>
        <div
          class="dropdown-menu"
          aria-labelledby="dropdownMenuButton"
        >
          <a
            class="dropdown-item"
            href="/sort/name/asc"
          >A->Z</a>
          <a
            class="dropdown-item"
            href="/sort/name/desc"
          >Z->A</a>
          <a
            class="dropdown-item"
            href="/sort/category/desc"
          >Category</a>
          <a
            class="dropdown-item"
            href="/sort/location/desc"
          >Location</a>
          <a
            class="dropdown-item"
            href="/sort/rating/desc"
          >Rating</a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<!-- restaurant list -->
<div class="container">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a
          href="./restaurants/{{ this._id }}"
          style="text-decoration:none color:#eee;"
        >
          </form>
          <div class="card mb-3">
            <img
              class="card-img-top"
              src="{{ this.image }}"
              alt="{{this.name}}"
            >
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <p
                class="mb-1"
                style="font-size: 10px"
              >{{this.name_en}}</p>
              <div class="restaurant-category mb-1">
                <span class="pr-2"><i class="fas fa-utensils"></i></span>{{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer">
              <div
                class="btn-group ml-4"
                role="group"
                aria-label="Basic example"
              >
                <a href="./restaurants/{{ this._id }}/edit">
                  <button
                    type="button"
                    class="btn btn-info"
                  >修改資訊</button>
                </a>
                <button
                  type="submit"
                  class="btn btn-warning"
                  data-toggle="modal"
                  data-target="#deleteModal{{this._id}}"
                >刪除餐廳</button>
              </div>
            </div>
          </div>
        </a>
        <!-- Modal -->
        <div
          class="modal fade"
          id="deleteModal{{this._id}}"
          tabindex="-1"
          role="dialog"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5
                  class="modal-title"
                  id="exampleModalLabel"
                >{{this.name}}</h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                確認刪除此餐廳?
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >取消</button>
                <form
                  action="./restaurants/{{ this._id }}?_method=DELETE"
                  method="POST"
                  style="display: inline;"
                >
                  <button
                    type="submit"
                    class="btn btn-warning"
                  >刪除餐廳</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>